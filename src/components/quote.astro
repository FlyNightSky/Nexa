---
import '../global.css';
const { image_url, quote, quote_by, image_credit, credit_name } = Astro.props;
---


<div class="lg:flex xl:flex lg:justify-center xl:justify-center lg:items-center xl:items-center hidden lg:block xl:block">
  <div class="hidden lg:block xl:block lg:w-1/2 xl:w-1/2 lg:mr-3 xl:mr-3">
    <div class="h-96 xl:h-[800px] overflow-hidden">
      <img src=`${image_url}` alt="Cover-Image" class="w-full h-full object-cover">
    </div>
  </div>
  <div class="lg:w-1/2 xl:w-5/12 lg:ml-3 xl:ml-3 text-center">
    <h1 class="mx-2 mt-2 text-3xl plain">"{quote}" - {quote_by}</h1>
    <cite class="text-[10px] m-2 text-[#5A5A5A]">{credit_name}: <a href=`${image_credit}`>{image_credit}</a></cite>
  </div>
</div>




<div class="bg-white lg:hidden xl:hidden">
    <div class="mx-auto flex max-w-screen-lg flex-col-reverse items-center justify-center lg:flex-row">
      <div class="w-full p-8 lg:w-1/2">
        <div class="pb-2 lg:hidden">
          <img class="h-auto w-full" src=`${image_url}` alt="Quote" />
          <p class="text-center text-sm text-gray-600"><a href=`${image_credit}`>Credit: {credit_name}</a></p>
        </div>
        <p class="plainreg text-center text-base text-black md:text-lg lg:text-xl xl:text-2xl">“{quote}” <br /><br />- {quote_by} </p>
      </div>
    </div>
</div>
